{
  "name": "stencil-playground",
  "private": true,
  "version": "0.0.1",
  "description": "Stencil playground app",
  "scripts": {
    "build": "stencil build --prerender --es5",
    "dev": "sd concurrent \"stencil build --dev --watch --es5\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.ci": "jest --no-cache --coverage",
    "test.watch": "jest --watch --no-cache",
    "serve.prod": "node scripts/serve.js",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "precommit": "npm run lint && lint-staged",
    "prepush": "npm run test"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@stencil/core": "^0.7.25",
    "@stencil/router": "latest"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/jest": "^22.2.3",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "koa": "^2.5.0",
    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa-static": "^4.0.2",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-ionic-rules": "^0.0.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DorianGrey/stencil-playground.git"
  },
  "author": {
    "name": "Christian Linne",
    "email": "ShadowVampire@web.de"
  },
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
