{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": ".",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/components.d.ts",
    "node_modules"
  ]
}
